<Window x:Class="TareasJson.Views.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Gestión de Contactos"
 Height="500"
 Width="800"
 WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Formulario -->
        <GroupBox Header="Contacto" Margin="10">
            <StackPanel>
                <TextBlock Text="Nombre"/>
                <TextBox Text="{Binding SelectedContact.Name, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Email" Margin="0,10,0,0"/>
                <TextBox Text="{Binding SelectedContact.Email}"/>

                <TextBlock Text="Teléfono" Margin="0,10,0,0"/>
                <TextBox Text="{Binding SelectedContact.Phone}"/>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Button Content="Agregar" Width="80" Margin="5"
                            Command="{Binding AddCommand}"/>
                    <Button Content="Eliminar" Width="80" Margin="5"
                            Command="{Binding DeleteCommand}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Lista -->
        <GroupBox Header="Lista de Contactos" Grid.Column="1" Margin="10">
            <ListBox ItemsSource="{Binding Contacts}"
                     SelectedItem="{Binding SelectedContact}"
                     DisplayMemberPath="Name"/>
        </GroupBox>
    </Grid>
</Window>
